#==============================================================================
# ERPNext Multi-Module SaaS Platform - Staging Environment Variables
# Version: 1.0.0
#==============================================================================

# Application Settings
APP_NAME=erpnext-saas-platform
APP_VERSION=1.0.0
APP_ENV=staging
DEBUG=true

# ERPNext Settings
FRAPPE_BRANCH=version-16
ERPNEXT_BRANCH=version-16
PYTHON_VERSION=3.11
NODE_VERSION=18

# Database Settings
DB_TYPE=mariadb
DB_HOST=mariadb
DB_PORT=3307
DB_ROOT_USER=root
DB_ROOT_PASSWORD=your_secure_root_password
DB_NAME_PREFIX=erpnext_

# Redis Settings
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6380
REDIS_QUEUE_HOST=redis-queue
REDIS_QUEUE_PORT=6381
REDIS_SOCKETIO_HOST=redis-socketio
REDIS_SOCKETIO_PORT=6382

# Web Settings
SITE_NAME=erpnext.local
ADMIN_PASSWORD=admin_password_here
HTTP_PORT=3004
HTTPS_PORT=3008
SOCKETIO_PORT=3006

# SSL Settings
SSL_ENABLED=false
SSL_CERTIFICATE=/etc/ssl/certs/erpnext.crt
SSL_CERTIFICATE_KEY=/etc/ssl/private/erpnext.key

# Mail Settings (Email Recovery for Customer Access)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@staging.yourdomain.com
MAIL_FROM_NAME=ERPNext SaaS Platform (Staging)

# Email Recovery Settings
PASSWORD_RESET_TOKEN_EXPIRY=1800
PASSWORD_RESET_EMAIL_SUBJECT=Reset Your ERPNext SaaS Password
PASSWORD_RESET_EMAIL_TEMPLATE=reset_password
SUBSCRIPTION_ACCESS_EMAIL_SUBJECT=Your Subscription Details
VERIFICATION_EMAIL_SUBJECT=Verify Your Email Address

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_DIR=/var/log/erpnext

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3000

# Multi-tenancy
MULTI_TENANCY_ENABLED=true
TENANT_ISOLATION=database
MAX_TENANTS_PER_INSTANCE=50

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=200
RATE_LIMIT_PER_HOUR=2000

# Security
JWT_SECRET=your_jwt_secret_key_here_staging
JWT_EXPIRY=86400
SESSION_TIMEOUT=3600
CORS_ALLOWED_ORIGINS=*
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Staging Environment
DEPLOY_ENVIRONMENT=staging
DEPLOY_USER=deployer
DEPLOY_PATH=/opt/erpnext-saas-staging

# Staging Domain
STAGING_DOMAIN=staging.yourdomain.com
SAAS_ADMIN_URL=http://staging.yourdomain.com:3000
TENANT_ADMIN_URL=http://staging.yourdomain.com:3001
CUSTOMER_PORTAL_URL=http://staging.yourdomain.com:3002
SHOWCASE_URL=http://staging.yourdomain.com:3003

# Port Allocation (Staging)
PORT_SAAS_ADMIN=3000
PORT_TENANT_ADMIN=3001
PORT_CUSTOMER_PORTAL=3002
PORT_SHOWCASE=3003
PORT_ERPNEXT=3004
PORT_ABP_BACKEND=3005
PORT_SOCKETIO=3006
PORT_NGINX_HTTP=3007
PORT_NGINX_HTTPS=3008
PORT_MARIADB=3307
PORT_REDIS_CACHE=6380
PORT_REDIS_QUEUE=6381
PORT_REDIS_SOCKETIO=6382
