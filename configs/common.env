#==============================================================================
# ERPNext Multi-Module SaaS Platform - Common Environment Variables
# Version: 1.0.0
#==============================================================================

# Application Settings
APP_NAME=erpnext-saas-platform
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# ERPNext Settings
FRAPPE_BRANCH=version-16
ERPNEXT_BRANCH=version-16
PYTHON_VERSION=3.11
NODE_VERSION=18

# Database Settings
DB_TYPE=mariadb
DB_HOST=mariadb
DB_PORT=3306
DB_ROOT_USER=root
DB_ROOT_PASSWORD=your_secure_root_password
DB_NAME_PREFIX=erpnext_

# Redis Settings
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_QUEUE_HOST=redis-queue
REDIS_QUEUE_PORT=6379
REDIS_SOCKETIO_HOST=redis-socketio
REDIS_SOCKETIO_PORT=6379

# Web Settings
SITE_NAME=erpnext.local
ADMIN_PASSWORD=admin_password_here
HTTP_PORT=8000
HTTPS_PORT=443
SOCKETIO_PORT=9000

# SSL Settings
SSL_ENABLED=false
SSL_CERTIFICATE=/etc/ssl/certs/erpnext.crt
SSL_CERTIFICATE_KEY=/etc/ssl/private/erpnext.key

# Mail Settings (Email Recovery for Customer Access)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com
MAIL_FROM_NAME=ERPNext SaaS Platform

# Email Recovery Settings
PASSWORD_RESET_TOKEN_EXPIRY=1800
PASSWORD_RESET_EMAIL_SUBJECT=Reset Your ERPNext SaaS Password
PASSWORD_RESET_EMAIL_TEMPLATE=reset_password
SUBSCRIPTION_ACCESS_EMAIL_SUBJECT=Your Subscription Details
VERIFICATION_EMAIL_SUBJECT=Verify Your Email Address

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=/var/log/erpnext

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Multi-tenancy
MULTI_TENANCY_ENABLED=true
TENANT_ISOLATION=database
MAX_TENANTS_PER_INSTANCE=50

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=86400
SESSION_TIMEOUT=3600
CORS_ALLOWED_ORIGINS=*
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Production Environment
APP_ENV=production
DEBUG=false
SSL_ENABLED=true
SSL_CERTIFICATE=/etc/ssl/certs/erpnext.crt
SSL_CERTIFICATE_KEY=/etc/ssl/private/erpnext.key

# Production Domain
PROD_DOMAIN=yourdomain.com
SAAS_ADMIN_URL=https://admin.yourdomain.com
TENANT_ADMIN_URL=https://tenant.yourdomain.com
CUSTOMER_PORTAL_URL=https://portal.yourdomain.com
SHOWCASE_URL=https://www.yourdomain.com

# Production Deployment
DEPLOY_ENVIRONMENT=production
DEPLOY_USER=deployer
DEPLOY_PATH=/opt/erpnext-saas
BACKUP_TO_PRODUCTION=true
AUTOMATIC_ROLLBACK=true
