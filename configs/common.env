#==============================================================================
# ERPNext Multi-Module SaaS Platform - Common Environment Variables
# Version: 1.0.0
#==============================================================================

# Application Settings
APP_NAME=erpnext-saas-platform
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# ERPNext Settings
FRAPPE_BRANCH=version-16
ERPNEXT_BRANCH=version-16
PYTHON_VERSION=3.11
NODE_VERSION=18

# Database Settings
DB_TYPE=mariadb
DB_HOST=mariadb
DB_PORT=3306
DB_ROOT_USER=root
DB_ROOT_PASSWORD=your_secure_root_password
DB_NAME_PREFIX=erpnext_

# Redis Settings
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_QUEUE_HOST=redis-queue
REDIS_QUEUE_PORT=6379
REDIS_SOCKETIO_HOST=redis-socketio
REDIS_SOCKETIO_PORT=6379

# Web Settings
SITE_NAME=erpnext.local
ADMIN_PASSWORD=admin_password_here
HTTP_PORT=8000
HTTPS_PORT=443
SOCKETIO_PORT=9000

# SSL Settings
SSL_ENABLED=false
SSL_CERTIFICATE=/etc/ssl/certs/erpnext.crt
SSL_CERTIFICATE_KEY=/etc/ssl/private/erpnext.key

# Mail Settings
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@example.com

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=/var/log/erpnext

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Multi-tenancy
MULTI_TENANCY_ENABLED=true
TENANT_ISOLATION=database
MAX_TENANTS_PER_INSTANCE=50

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=86400
SESSION_TIMEOUT=3600
CORS_ALLOWED_ORIGINS=*
